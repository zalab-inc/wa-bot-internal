		"mysql2": "^3.12.0",
		"puppeteer": "^22.4.1",
		"qrcode-terminal": "^0.12.0",
		"ts-node": "^10.9.2",
		"ts-node-dev": "^2.0.0",
		"typescript": "^5.4.2",
		"whatsapp-web.js": "^1.23.0",
		"pm2": "^5.3.1"
	},
	"devDependencies": {
		"@types/node": "^20.11.25",
		"@types/puppeteer": "^7.0.4",
		"@types/qrcode-terminal": "^0.12.2"
