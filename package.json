{
	"name": "wa-sender-node",
	"version": "1.0.0",
	"description": "WhatsApp message sender using whatsapp-web.js",
	"main": "dist/index.js",
	"scripts": {
		"start": "ts-node src/index.ts",
		"dev": "ts-node src/index.ts",
		"build": "tsc",
		"serve": "node dist/index.js",
		"pm2:start": "pm2 start npm --name wa-bot -- serve",
		"pm2:stop": "pm2 stop wa-bot",
		"pm2:restart": "pm2 restart wa-bot",
		"pm2:delete": "pm2 delete wa-bot",
		"pm2:logs": "pm2 logs wa-bot",
		"pm2:monit": "pm2 monit"
	},
	"keywords": ["whatsapp", "bot", "typescript"],
	"author": "",
	"license": "ISC",
	"dependencies": {
		"@ai-sdk/openai": "^1.1.5",
		"ai": "^4.1.11",
